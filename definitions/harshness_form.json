{
    "type": "object",
    "properties": {
        "feature": {
            "type": "array",
            "title": "Select area (bbox) on map",
            "options": {
                "for": "eox-map#main",
                "projection": "EPSG:4326"
            },
            "format": "bounding-box"
        },
        "date_start": {
            "type": "string",
            "title": "Select start year",
            "enum": [
                "2019",
                "2020",
                "2021",
                "2022"
            ],
            "default": "2020"
        },
        "date_end": {
            "type": "string",
            "title": "Select end year",
            "enum": [
                "2019",
                "2020",
                "2021",
                "2022"
            ],
            "default": "2021"
        },
        "wave_height": {
            "type": "number",
            "title": "Maximum acceptable wave height [m]",
            "minimum": 0,
            "maximum": 10,
            "default": 3,
            "format": "range"
        },
        "sea_ice_concentration": {
            "type": "number",
            "title": "Maximum acceptable ice concentration [%]",
            "minimum": 0,
            "maximum": 100,
            "default": 15,
            "format": "range"
        }
    }
}